{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@types/node": "^16.18.12",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "prettier": "^2.8.4",
    "syncpack": "^9.8.4",
    "turbo": "^1.8.2"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "turbo lint:all",
    "format": "turbo format:all",
    "dev": "turbo dev",
    "build": "turbo build",
    "serve": "turbo serve",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "lint:style": "prettier --check **/*.{js,jsx,ts,tsx,json,css,scss,md,html}",
    "lint:dependencies": "syncpack list-mismatches",
    "format:style": "prettier --write **/*.{js,jsx,ts,tsx,json,css,scss,md,html}",
    "format:dependencies": "syncpack fix-mismatches"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md,html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.14",
    "npm": ">=8"
  },
  "packageManager": "npm@8.11.0"
}
