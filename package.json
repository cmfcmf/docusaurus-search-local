{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/node": "^20.19.21",
    "commit-and-tag-version": "^12.6.0",
    "git-branch-is": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.8"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "turbo lint:all",
    "format": "turbo format:all",
    "dev": "turbo dev",
    "build": "turbo build",
    "serve": "turbo serve",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "lint:style": "prettier --check .",
    "lint:dependencies": "syncpack list-mismatches",
    "format:style": "prettier --write .",
    "format:dependencies": "syncpack fix-mismatches",
    "release": "bash scripts/release.sh"
  },
  "lint-staged": {
    ".": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "npm@10.9.4"
}
