{
  "name": "root",
  "private": true,
  "dependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/node": "^18",
    "commit-and-tag-version": "^12.5.0",
    "git-branch-is": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "syncpack": "^13.0.0",
    "turbo": "^2.2.3"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "turbo lint:all",
    "format": "turbo format:all",
    "dev": "turbo dev",
    "build": "turbo build",
    "serve": "turbo serve",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "lint:style": "prettier --check .",
    "lint:dependencies": "syncpack list-mismatches",
    "format:style": "prettier --write .",
    "format:dependencies": "syncpack fix-mismatches",
    "release": "bash scripts/release.sh"
  },
  "lint-staged": {
    ".": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.18",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.12.3"
}
